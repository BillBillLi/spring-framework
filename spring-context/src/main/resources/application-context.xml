<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:p="http://www.springframework.org/schema/p"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans.xsd">
    <!--    一个灰常简单的xml  -->
    <bean id="aPerson" class="org.springframework.test.Person" name="aPerson">
    </bean>
    
    
    <alias name="aPerson" alias="aGirl"></alias>
    
    <bean id="pigHouse" class="org.springframework.test.PigHouse">
        <property name="pigzhu">
            <ref bean="pig"/>
        </property>
    </bean>

    <bean id="pigFactory" class="org.springframework.test.PigFactory"/>
    
    <bean id="pig" factory-bean="pigFactory" factory-method="getInstance">
    </bean>
    
</beans>
